{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 3,
      "required": true
    },
    "email": {
      "type": "string",
      "minLength": 5,
      "required": true
    },
    "country": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "zip": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "minLength": 10,
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "deliveryCharges": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "amountPaid": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "info": {
      "type": "text"
    },
    "items": {
      "type": "component",
      "component": "kp.order-product",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "orderStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "completed",
        "cancelled",
        "failed",
        "refunded"
      ]
    },
    "trackingId": {
      "type": "string"
    },
    "intent": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "json": {
      "type": "json",
      "required": true
    }
  }
}
