{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "required": true
    },
    "titleAsVariant": {
      "type": "string"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "wholesale": {
      "type": "component",
      "component": "kp.wholesale-price",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "sizes": {
      "type": "component",
      "component": "kp.product-sizes",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "additional": {
      "type": "component",
      "component": "kp.product-defaults",
      "repeatable": false,
      "required": true
    },
    "fit": {
      "type": "component",
      "component": "kp.product-fit",
      "repeatable": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false,
      "required": true
    }
  }
}
